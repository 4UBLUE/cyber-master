/* pages/detail1/detail1.wxss */
.container {
    padding-top: 60px; /* 保证文本内容不会被标题和返回按钮覆盖 */
    background-color: #ffefb3;
  }
  
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 60px; /* 设置标题栏的高度 */
    background-color: #F2CA33;
    border-bottom: 1px solid #dddddd;
    display: flex;
    align-items: center;
    padding: 0 20px;
    box-sizing: border-box;
  }
  
  .title {
    font-size: 18px;
    font-weight: bold;
    margin-left: 20px;
  }
  
  .back-icon {
    width: 24px;
    height: 24px;
  }

  .content{
      padding: 10px;
  }
  